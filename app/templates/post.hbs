<div class="container post-body">
  <h1>{{model.title}}</h1>
  <h4>By {{model.author}}, {{model.date}}</h4>
  <img src="{{model.image}}" class="image">
  <hr>
  <p class="blogContent">{{{model.content}}}</p>
  <h2>Comments</h2>
  <ul>
    {{#each model.comments as |comment|}}
      {{comment-tile comment=comment destroyComment="destroyComment" updateComment="updateComment"}}
    {{/each}}
  </ul>
  {{update-post post=model update="update" delete="delete"}}
  {{new-comment saveComment="saveComment" post=model}}
</div>
